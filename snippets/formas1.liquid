<script>
        // Função para mostrar o conteúdo da forma de pagamento clicada e mudar as cores
        function showPaymentContent(paymentId, button) {
            const paymentContents = document.querySelectorAll('.payment-content');
            paymentContents.forEach(content => {
                content.style.display = 'none'; // Esconde todos os conteúdos
            });

            const paymentButtons = document.querySelectorAll('.payment-button');
            paymentButtons.forEach(button => {
                button.querySelector('svg').style.fill = ''; // Remove a cor azul dos SVGs
                button.querySelector('.styles__OptionText-sc-meyq31-16').style.color = ''; // Remove a cor azul do texto
            });

            const selectedContent = document.getElementById(paymentId + '-content');
            if (selectedContent) {
                selectedContent.style.display = 'block'; // Exibe o conteúdo correspondente
                button.querySelector('svg').style.fill = '#f80032'; // Muda a cor do SVG para vermelho
                button.querySelector('svg').style.fill = '#f80032'; // Muda a cor do SVG para vermelho
                button.querySelector('.styles__OptionText-sc-meyq31-16').style.color = '#f80032'; // Muda a cor do texto para vermeho
            }
        }

        // Chama a função para mostrar o conteúdo do primeiro botão (cartao-credito)
        const firstPaymentButton = document.querySelector('[data-payment="cartao-credito"]');
        if (firstPaymentButton) {
            showPaymentContent('cartao-credito', firstPaymentButton);
        }

        // Adiciona um evento de clique a cada botão de pagamento
        const paymentButtons = document.querySelectorAll('.payment-button');
        paymentButtons.forEach(button => {
            button.addEventListener('click', function() {
                const paymentId = this.getAttribute('data-payment');
                showPaymentContent(paymentId, this);
            });
        });
    </script>

