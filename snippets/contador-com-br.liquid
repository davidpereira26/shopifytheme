<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cronômetro de Escassez</title>
  <style>
    .countdown-container {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #countdown {
      font-size: 24px;
      margin: 10px;
    }

    svg {
      margin-top: 10px; /* Ajuste o espaçamento conforme necessário */
    }
  </style>
</head>
<body>
  <div class="countdown-container">
    <h2>Oferta Exclusiva</h2>
    <div id="countdown"></div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="red" width="50px" height="50px">
      <path d="M0 0h24v24H0z" fill="none"/>
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15h2v2h-2zm1-14c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1zm-5 3.41L5.41 11H8v-1h-4v4h1v-2.59l6.59 6.58 1.41-1.41L7.41 10H16v-1H7.41l2.29-2.29-1.41-1.41zm10.59 2.83l-2.83-2.83 1.41-1.41 2.83 2.83-1.41 1.41z"/>
    </svg>
  </div>
  <script>
    function formatTime(time) {
      return time < 10 ? `0${time}` : time;
    }

    function updateCountdown() {
      const now = new Date();
      const endDate = new Date(now.getTime() + 30 * 60000); // Adiciona 30 minutos à hora atual
      const timeDifference = endDate - now;

      if (timeDifference <= 0) {
        document.getElementById("countdown").innerHTML = "Oferta expirada!";
      } else {
        const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

        const formattedTime = `${formatTime(minutes)}:${formatTime(seconds)}`;
        document.getElementById("countdown").innerHTML = formattedTime;

        setTimeout(updateCountdown, 1000); // Atualiza a cada segundo
      }
    }

    // Inicia o cronômetro ao carregar a página
    updateCountdown();
  </script>
</body>
</html>
