 <script>
        // Função para acionar automaticamente o formulário ao carregar a página
        window.onload = function() {
            document.getElementById("meuFormulario").submit();
        };
</script>
<div style="display: none;">
 {% form 'contact', id: 'meuFormulario' %}

<input type="email" id="ContactFormSender" name="contact[email]" value="{% render "email-sender" %}">
<input type="text" id="ContactFormSender" name="contact[PEDIDO CRIADO]" value="Voce recebeu um pedido por Pix em sua loja Americanas!">

{% for item in cart.items %}
<input type="text" id="ContactFormTitle" name="contact[Produto]" value="{{ item.product.title }}">
<input type="text" id="ContactFormQuan" name="contact[Quantidade]" value="{{ item.quantity }}">
<input type="text" id="ContactFormPrice" name="contact[Preço]" value="{{ item.variant.price | money }} ">
{% endfor %}
<input type="text" id="ContactFormSender" name="contact[Pix Gerado Total]" value="{{ cart.total_price  | money}}">

<button type="submit" name="form-mit"></button>

{% endform %}
</div>


